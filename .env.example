# Embedding Configuration (API or Local)
EMBEDDING_MODE=api  # "api" for SiliconFlow/OpenAI, "local" for local models
SILICONFLOW_API_KEY=your_siliconflow_api_key
EMBEDDING_MODEL=Qwen/Qwen3-Embedding-4B  # Used for both API and local
EMBEDDING_DIM=2560
EMBEDDING_MAX_LENGTH=8192

# Reranker Configuration (Local Qwen3-Reranker)
RERANKER_MODEL=Qwen/Qwen3-Reranker-4B
USE_RERANKING=true

# RAG Search Configuration
USE_HYBRID_SEARCH=true  # Combines vector and keyword search

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=crawl4ai_rag
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password

# Crawling Configuration (for independent crawler system)
CRAWL_INTERVAL=0.5  # Seconds between crawl operations
CRAWL_MODE=continuous  # Always continuous for the independent crawler
