# =============================================================================
# 数据库配置 (Database Configuration)
# =============================================================================
# 项目固定使用云端数据库 (Project uses cloud database)
# =============================================================================

# =============================================================================
# 本地数据库配置 (Local Database Configuration) - 已不再使用
# =============================================================================
LOCAL_DB_HOST=localhost
LOCAL_DB_PORT=5432
LOCAL_DB_DATABASE=crawl4ai_rag
LOCAL_DB_USER=your_local_db_user
LOCAL_DB_PASSWORD=your_local_db_password
LOCAL_DB_SSLMODE=disable

# =============================================================================
# 云端数据库配置 (Cloud Database Configuration)
# =============================================================================
CLOUD_DB_HOST=your_cloud_database_host
CLOUD_DB_PORT=5432
CLOUD_DB_DATABASE=your_cloud_database_name
CLOUD_DB_USER=your_cloud_database_user
CLOUD_DB_PASSWORD=your_cloud_database_password
CLOUD_DB_SSLMODE=disable

# =============================================================================
# PostgreSQL容器配置 (PostgreSQL Container Configuration)
# =============================================================================
POSTGRES_DB=crawl4ai_rag
POSTGRES_USER=your_postgres_user
POSTGRES_PASSWORD=your_postgres_password

# Embedding Configuration
# EMBEDDING_MODE=api
EMBEDDING_MODE=local  # "api" for SiliconFlow, "local" for local models

EMBEDDING_MODEL=Qwen/Qwen3-Embedding-4B
EMBEDDING_DIM=2560
EMBEDDING_MAX_LENGTH=32000
# API Keys now managed in config/api_keys.txt
SILICONFLOW_API_BASE_URL=https://api.siliconflow.cn/v1/embeddings
SILICONFLOW_TIMEOUT=10
SILICONFLOW_FALLBACK_TO_LOCAL=false
RERANKER_MODEL=Qwen/Qwen3-Reranker-4B

# Performance Configuration
TOKENIZERS_PARALLELISM=false

# =============================================================================
# Crawler Configuration (爬虫配置)
# =============================================================================
TARGET_URL=https://developer.apple.com/documentation/
WORKER_BATCH_SIZE=20
CRAWLER_DUAL_CRAWL_ENABLED=true
CRAWLER_DELAY_BEFORE_RETURN=5
CRAWLER_PAGE_TIMEOUT=30000

# =============================================================================
# System Components Control (系统组件控制)
# =============================================================================
ENABLE_CRAWLER=true
ENABLE_PROCESSOR=true

# =============================================================================
# Processor Configuration (处理器配置) - 三层参数设计
# =============================================================================
# 主参数：内容获取批次大小，其他参数自动计算
# - chunk_buffer限制 = CONTENT_FETCH_SIZE ÷ 2 (25)
# - chunk_batch_size = buffer限制 ÷ 2 (12)
PROCESSOR_CONTENT_FETCH_SIZE=50
